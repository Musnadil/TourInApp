<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TourIn" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_theme</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- transparent status bar -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <!-- light navigation bar in night mode-->
        <item name="android:navigationBarColor">@color/white_theme</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in_card</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_card</item>
    </style>
    <style name="NewDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in_card</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_card</item>
    </style>
</resources>